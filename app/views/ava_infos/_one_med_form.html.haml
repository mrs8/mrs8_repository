.col-md-6
  .panel.panel-success
    .panel-heading
      Лекарство
    .panel.body
    .row
      .col-md-12
        .form-group
          = fr.label :medicine_name
          = fr.text_field :medicine_name, class: 'form-control'
          = fr.error_messages_for(:medicine_name)
    .row
      .col-md-12
        .form-group
          = fr.label :dosage
          = fr.text_field :dosage, class: 'form-control'
          = fr.error_messages_for(:dosage)
    .row
      .col-md-12
        .form-group
          = fr.label :quantity_or_volume
          = fr.text_field :quantity_or_volume, class: 'form-control'
          = fr.error_messages_for(:quantity_or_volume)
    .row
      .col-md-12
        .form-group
          = fr.label :manufacturer
          = fr.text_field :manufacturer, class: 'form-control'
          = fr.error_messages_for(:manufacturer)
    .row
      .col-md-12
        .form-group
          = Medicine.human_attribute_name(:need_recipe)
          = fr.select(:need_recipe , options_for_select(["да","нет"], @ava_info.medicine.need_recipe),{}, class: 'form-control')
          = fr.error_messages_for(:need_recipe)
    .row
      .col-md-12
        .form-group
          = fr.label :price
          = fr.text_field :price, class: 'form-control'
          = fr.error_messages_for(:price)
    .row
      .col-md-12
        .form-group
          = fr.label :category
          %br
          = fr.select(:category_id , options_for_select(category_for_select(), @ava_info.medicine.category_id),{}, class: 'form-control')
          = fr.error_messages_for(:category_id)
