=breadcrumb_tag do
  %li.active
    Категории
  %li
    Администрирование




%h1= t('app.categories.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.categories.new-button'), new_category_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Category.human_attribute_name(:category_name)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @categories.each do |category|
      %tr
        %td= category.category_name
        %td
          = link_to category, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_category_path(category), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to category, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times

