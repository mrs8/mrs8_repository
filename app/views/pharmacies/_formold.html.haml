= form_for @pharmacy do |f|
  - if @pharmacy.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pharmacy.errors.count, "error")} prohibited this pharmacy from being saved:"
      %ul
        - @pharmacy.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :adress
    = f.text_area :adress
  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :nearest_metro
    = f.text_area :nearest_metro
  .actions
    = f.submit 'Save'
